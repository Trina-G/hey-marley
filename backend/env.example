# Langflow Configuration
# Copy this file to .env and fill in your actual values

# Langflow Base URL (your Langflow instance)
LANGFLOW_BASE_URL=http://localhost:7860

# Langflow API Key (if using Langflow Cloud or authenticated instance)
# Leave empty if using local Langflow without authentication
LANGFLOW_API_KEY=

# Flow IDs - Get these from your Langflow instance
# Flow 1: Scenario Generation (required)
FLOW_1_ID=your-scenario-generation-flow-id

# Flow 2: Assessment Plan (optional)
FLOW_2_ID=your-assessment-plan-flow-id

# Flow 3: Exercise Generation (optional, for Iteration 2)
FLOW_3_ID=your-exercise-generation-flow-id

# Flow 4: Session Feedback (optional, for Iteration 2)
FLOW_4_ID=your-session-feedback-flow-id

# Backend Server Configuration (optional)
PORT=8000
